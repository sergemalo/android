<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skydelsolutions.gnssloggertutorial.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/location_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location ON"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/location_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location OFF"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/raw_meas_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAW MEAS ON"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/location_on"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/location_on" />

    <Button
        android:id="@+id/raw_meas_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAW MEAS OFF"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/location_off"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/start_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START LOG!"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/raw_meas_on"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/send_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND FILE"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/raw_meas_off"
        app:layout_constraintTop_toBottomOf="@+id/raw_meas_off"
        android:layout_marginTop="8dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="354dp"
        android:layout_height="324dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_log"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="-133dp" />

</android.support.constraint.ConstraintLayout>
